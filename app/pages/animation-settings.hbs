    /* Content slide css styling ---------------------------
    -------------------------------------------------------- */

    .slideOne {
        left: 20px;
        width: 540px;
        position: absolute;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .slideTwo {
        left: 100%;
        width: 540px;
        position: absolute;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .slide:hover .slideOne {
        left: -100%;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .slide:hover .slideTwo {
        left: 20px;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }



    /* Fade Content css styling ---------------------------
    -------------------------------------------------------- */

    .fadeContent {
        top: 20%;
        left: 20px;
        width: 540px;
        opacity: 0;
        position: absolute;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .fade:hover .fadeContent {
        top: 0;
        opacity: 1;
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }


    /* Toggle css styling ---------------------------
    -------------------------------------------------------- */

    .toggle a {
        display: inline-block;
        border: 2px solid #ccc;
        position: relative;
        width: 185px;
        height: 60px;
        margin: 20px 0 0;
        transform: scale(1);
    }

    .toggle a:after {
        content:"";
        display: block;
        position: absolute;
        width: 70px;
        height: 25px;
        background: #2a4c9e;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
    }

    .toggle a:last-of-type { border-left: none; }

    .toggle a:hover {
        background: #2a4c9e;
        border-color: #2a4c9e;
        transition: all .6s cubic-bezier(0.19, 1, 0.22, 1);
        transform: scale(1.1);
        z-index: 2;
    }

    .toggle a:hover:after {
        background: white;
        transition: all .6s cubic-bezier(0.19, 1, 0.22, 1);
    }


    /* Flipcard css styling ---------------------------
    -------------------------------------------------------- */

    .flip-container {
        perspective: 1000px;
        position: absolute;
        top: calc(50% - 100px);
        left: calc(50% - 160px);
    }

    .flip-container:hover .flipper,
    .flip-container.hover .flipper {
        transform: rotateY(180deg);
    }

    .flip-container, .front, .back {
        width: 295px;
        height: 200px;
    }

    .flipper {
        transition: 1s cubic-bezier(1, 0, 0, 1);
        transform-style: preserve-3d;
        position: relative;
    }

    .front, .back {
        backface-visibility: hidden;
        position: absolute;
        top: 0;
        left: 0;
        background: white;
        border: 1px solid #ccc;
        box-shadow: 0 8px 6px -6px #777;
    }

    .front {
        z-index: 2;
        transform: rotateY(0deg);
    }

    .back {
        transform: rotateY(180deg);
        background: #2a4c9e;
        border-color: #2a4c9e;
    }

    .front .content,
    .back .content {
        width: 85%;
        margin: 20px auto;
    }

    .back .content { background: white; }


    /* Pop Up css styling ---------------------------
    -------------------------------------------------------- */

    .popUp {
        position: absolute;
        width: 295px;
        height: 200px;
        top: calc(50% - 100px);
        left: calc(50% - 160px);
        background: white;
        border: 2px solid #ccc;
        padding: 0 20px;
        opacity: 0;
        transition: all .6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transform: scale(0.2);
    }

    .pop:hover .popUp {
        opacity: 1;
        transform: scale(1);
    }


    /* Prettify CSS ---------------------------
    -------------------------------------------------------- */

    span { font-size: 14px; }
    span.class { color: blue; }
    span.bracket { color: #333; }
    span.attribute { color: #FF66FF; display: block; text-indent: 20px; }


