<div class="form-group has-feedback clearfix">
  {{#if label}}
    <label for="{{name}}" class="control-label{{#if horizontal}} col-md-6{{/if}} {{#if sr-only}} sr-only{{/if}}">{{label}}</label>
    {{#if horizontal}}<div class="col-md-6">{{/if}}
  {{/if}}
  <input type="text" class="form-control" id="{{name}}" name="{{name}}"{{#if placeholder}} placeholder="{{placeholder}}"{{/if}}{{#if required}} data-error="{{required}}" required{{/if}}/>
  {{#> form/input/error}}{{/form/input/error}}
  {{#if horizontal}}
  </div>{{/if}}
</div>{{#if showcode}}
<pre class="pre-scrollable"><code class="html">&lt;div class="form-group has-feedback"&gt;
  &lt;label for="name" class="control-label{{#if horizontal}} col-md-6{{/if}}"&gt;Name&lt;/label&gt;{{#if horizontal}}
  &lt;div class="col-md-6"&gt;{{/if}}
  &lt;input type="text" class="form-control" id="name" name="name" placeholder="Enter name here" required /&gt;
  &lt;span class="icon icon-attention form-control-feedback" aria-hidden="true"&gt;&lt;i class="fa fa-caret-down"&gt;&lt;/i&gt;&lt;/span&gt;{{#if horizontal}}
  &lt;/div&gt;{{/if}}
&lt;/div&gt;
</code></pre>{{/if}}
